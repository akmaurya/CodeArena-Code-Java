<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="helloWorld" class="com.gps.spring.ioc.pojo.HelloWorld">
		<property name="message" value="Hello World Text Message Example" />
	</bean>

	<!-- Injection via p:schema -->
	<bean id="helloWorldViaPSchema" class="com.gps.spring.ioc.pojo.HelloWorld"
		p:message="Hello World Text Message Example Via P schema" />
</beans>